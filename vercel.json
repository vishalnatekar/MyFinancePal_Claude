{
	"framework": "nextjs",
	"functions": {
		"src/app/api/**/*.ts": {
			"runtime": "nodejs20.x"
		},
		"src/app/api/accounts/sync-all/route.ts": {
			"maxDuration": 300
		}
	},
	"crons": [
		{
			"path": "/api/cron/cleanup-oauth-states",
			"schedule": "0 2 * * *"
		},
		{
			"path": "/api/cron/sync-accounts",
			"schedule": "0 3 * * *"
		},
		{
			"path": "/api/cron/send-weekly-summaries",
			"schedule": "0 18 * * 0"
		}
	],
	"regions": ["iad1"]
}
