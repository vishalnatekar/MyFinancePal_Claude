{
	"name": "myfinancepal",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbo",
		"build": "next build",
		"start": "next start",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:e2e": "playwright test",
		"check": "npm run lint && npm run type-check && npm run test",
		"type-check": "tsc --noEmit",
		"ai:setup": "npm install && npm run db:types && npm run db:seed",
		"ai:fresh": "npm run db:reset && npm run db:types && npm run db:seed",
		"db:reset": "supabase db reset",
		"db:types": "supabase gen types typescript --local > src/types/database.ts",
		"db:seed": "supabase db seed",
		"analyze": "ANALYZE=true npm run build",
		"health": "node scripts/health-check.js",
		"setup": "node scripts/dev-setup.js",
		"bmad:refresh": "bmad-method install -f -i codex",
		"bmad:list": "bmad-method list:agents",
		"bmad:validate": "bmad-method validate"
	},
