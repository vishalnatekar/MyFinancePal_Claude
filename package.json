		"@supabase/auth-helpers-nextjs": "^0.10.0",
		"@supabase/ssr": "^0.7.0",
		"@supabase/supabase-js": "^2.45.0",
		"@tanstack/react-query": "^5.90.2",
		"@testing-library/user-event": "^14.6.1",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.0",
