	"devDependencies": {
		"@biomejs/biome": "^1.8.0",
		"@next/bundle-analyzer": "^14.2.0",
		"@playwright/test": "^1.40.0",
		"@testing-library/jest-dom": "^6.1.0",
		"@testing-library/react": "^14.1.0",
		"@types/jest": "^30.0.0",
		"@types/node": "^20.0.0",
		"@types/react": "^18.0.0",
		"@types/react-dom": "^18.0.0",
		"@types/supertest": "^6.0.0",
		"autoprefixer": "^10.4.0",
		"jest": "^29.7.0",
